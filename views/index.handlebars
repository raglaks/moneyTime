<div class="col-lg-4 card-deck mx-auto">

    <div class="card">

        <img class="card-img-top padding indexPic" src="/images/card1.png" alt="kiwis">

        <div class="card-body">

            <h2 class="card-title text-center">SIGN UP</h2>

            <form class="card-text">

                <div class="form-group">
                    <label for="nameSignUp">Name</label>
                    <input type="name" class="form-control" id="nameSign" placeholder="Enter name">
                </div>

                <div class="form-group">
                    <label for="emailSignUp">Email address</label>
                    <input type="email" class="form-control" id="emailSign" placeholder="Enter email">
                </div>

                <div class="form-group">
                    <label for="passwordSignUp">Password</label>
                    <input type="password" class="form-control" id="passwordSign" placeholder="Password">
                </div>

                <button type="submit" class="btn btn-primary" id="submitSign">SUBMIT</button>

                <p class="text-danger" id="signAlert"></p>
            </form>

        </div>

    </div>

</div>

