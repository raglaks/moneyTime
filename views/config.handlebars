
<div class="offset-md-2 col-md-8 offset-sm-1 col-sm-10" id="accountConfig">
    <h3>Account Configuration</h3>
    <p class="card-text">Add a new Credit, debit or wallet account to your profile.</p>
    <form>
        {{!-- Fin Account Name --}}
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-default">Account Name</span>
            </div>
            <input id="accNmae" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        </div>
        {{!-- Fin Account Type --}}
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label class="input-group-text" for="inputGroupSelect01">Options</label>
            </div>
            <select class="custom-select" id="inputGroupSelect01">
                <option selected disabled>Select an account Type</option>
                <option value="debit">Debit</option>
                <option value="credit">Credit</option>
                <option value="wallet">Wallet</option>
            </select>
        </div>
        {{!-- Fin Account Statement Date --}}
        <div class="input-group mb-3" id="statementDate">
            {{!-- <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-default">Statement Date</span>
            </div>
            <input id="statDate" class="calendar form-control" type="text" placeholder="Select Date.." readonly="readonly"> --}}
        </div>
        
        {{!-- Due Date --}}
        <div class="input-group mb-3" id="dueDate">
            {{!-- <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-default">Due Date</span>
            </div>
            <input id="dueD" class="calendar form-control" type="text" placeholder="Select Date.." readonly="readonly"> --}}
        </div>

        {{!-- submit button --}}
        <button type="button" class="btn btn-success" id="createAcc">Submit</button>
    </form>
</div>


<div class="offset-md-2 col-md-8 offset-sm-1 col-sm-10" id="accounts">
    <table style="width:100%">
    <tr>
        <th>Account</th>
        <th>Type</th>
        <th>Statement Date</th>
        <th>Due Date</th>
        <th>Delete</th>
    </tr>

    {{#each result}}
    <tr>
        <td>{{finAccount}}</td>
        <td>{{accountType}}</td>
        <td>{{statementDate}}</td>
        <td>{{dueDate}}</td>
        <td>
            <svg id="i-close" data-id={{id}} viewBox="0 0 32 32" width="10" height="10" fill="none" stroke="currentcolor" stroke-linecap="round"
            stroke-linejoin="round" stroke-width="2">
                <path d="M2 30 L30 2 M30 30 L2 2" />
            </svg>
        </td>
    </tr>
    {{/each}}
    </table>
</div>

